    .footer__copyright
      .footer__copyright-year-wrap
        .footer__copyright-year © 2020
      .footer__copyright-myinfo
        .footer__copyright-name Никита Еремеев
        .footer__copyright-desc.text Веб-платформа тестирования по дисциплине "Системы искусственного интеллекта"
    .footer__content
      .footer__main-menu
        include main-menu.pug
        +main-menu('footer')
